% PACKAGES FOR PAGES FORMATTING
\usepackage{parskip, layout, afterpage, fancyhdr, xstring, lipsum}

\newcommand\blankpage{%
    \null
    \thispagestyle{empty}%
    \newpage
}

\newcommand{\startpreamble}{
    \pagestyle{fancy} % Change the header style
    \fancyhf{} % Clear header and footer
    \renewcommand{\chaptermark}[1]{\markboth{##1}{}} % Getting the chapter name right
    \rhead{}
    \lhead{}
    \renewcommand{\headrulewidth}{0pt}
    \frontmatter % Use roman page numbering style (i, ii, iii, iv...) for the preamble pages
}

\newcommand{\startmainmatter}{
    \fancyhf{} % Clear all header and footer fields
    \fancyfoot[C]{\thepage} % Center the page number in the footer
    \renewcommand{\headrulewidth}{0pt} % Remove the header rule
    \renewcommand{\footrulewidth}{0pt} % Remove the footer rule
    \mainmatter
}

% Dedica
\newcommand{\dedication}[1]{%
    \null
    \begin{flushright}
        \slshape
        \small
        \vspace{4cm}
        #1
        \vfill
    \end{flushright}
    \thispagestyle{empty}%
    \newpage
}

\RequirePackage{xkeyval}
\makeatletter
\renewcommand*\cleardoublepage{%
    \clearpage\if@twoside\ifodd\c@page\else
    \null
    \thispagestyle{empty}%
    \newpage
    \if@twocolumn\hbox{}\newpage\fi\fi\fi}
\makeatother

% Redefine \chapter to suppress page number on the first page of chapters
\makeatletter
\renewcommand{\chapter}{
    \if@openright\cleardoublepage\else\clearpage\fi
    \thispagestyle{empty} % Suppress page number on first page of chapter
    \global\@topnum\z@
    \@afterindentfalse
    \secdef\@chapter\@schapter
}
\makeatother

